<% @categories.each do |category| %>
  <%= link_to category.name, posts_category_path(name: category.name) %>
<% end %>

<div id="main_post">
  <div class="large_width">
    <div class="post_rank">
      <h2>急上昇</h2>
      <ul>
        <div class="rank_list">
          <% n = 1 %>
          <% @soarings.each do |post| %>
            <% if n == 1 %>
              <li class="post_first a_hover">
                <%= link_to post_path(post) do %>
                   <div class="post_word">
                    <%= image_tag post.image_id, class:"post_img"%>
                    <div class="post_back">
                      <p class="post_title"><%= post.title %></p>
                    </div>
                  </div>
                  <div class="post_state">
                    <div class="user_introduction">
                      <div class="user_state_box">
                        <%= attachment_image_tag(post.user, :profile_image, :fill, fallback: "no-image-icon.jpg") %>
                        <p class="user_name">
                          <%= post.user.name %>
                        </p>
                      </div>
                      <span class=<%= "favorite-" + post.id.to_s %>>
                        <%= render 'favorites/favorites', post: post, user: current_user %>
                      </span>
                    </div>
                  </div>
                <% end %>
              </li>
              <% n += 1 %>
            <% else %>
              <li class="rank_less_list a_hover">
                <%= link_to post_path(post) do %>
                  <div class="post_word">
                    <%= image_tag post.image_id, class:"post_img"%>
                    <div class="post_back">
                      <p class="post_title"><%= post.title%></p>
                    </div>
                  </div>
                  <div class="post_state">
                    <div class="user_introduction">
                      <div class="user_state_box">
                        <%= attachment_image_tag(post.user, :profile_image, :fill, fallback: "no-image-icon.jpg") %>
                        <p class="user_name">
                          <%= post.user.name %>
                        </p>
                      </div>
                      <span class=<%= "favorite-" + post.id.to_s %>>
                        <%= render 'favorites/favorites', post: post, user: current_user %>
                      </span>
                    </div>
                  </div>
                <% end %>
              </li>
            <% end %>
          <% end %>
        </div>          
      </ul>
    </div>
    <div class="trend">
      <h2>トレンド</h2>
      <ul>
        <% @rankings.each do |post| %>
          <li class="post_list a_hover">
            <%= link_to post_path(post) do %>
              <div class="post_word">
                <%= image_tag post.image_id, class:"post_img"%>
                <div class="post_back">
                  <p class="post_title"><%= post.title %></p>
                </div>
              </div>
              <div class="post_state">
                <div class="user_introduction">
                  <div class="user_state_box">
                    <%= attachment_image_tag(post.user, :profile_image, :fill, fallback: "no-image-icon.jpg") %>
                    <p class="user_name">
                      <%= post.user.name %>
                    </p>
                  </div>
                  <span class=<%= "favorite-" + post.id.to_s %>>
                    <%= render 'favorites/favorites', post: post, user: current_user %>
                  </span>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
    
    
    <div class="aaa">
      <h2>新着一覧</h2>
      <ul>
        <% @latest.each do |post| %>
          <li class="aaa_list a_hover">
            <%= link_to post_path(post) do %>
              <div class="post_word">
                <%= image_tag post.image_id, class:"post_img my_img"%>
                <div class="post_back">
                  <div class="post_state">
                    <div class="user_introduction">
                      <div class="user_state_box">
                         <%= attachment_image_tag(post.user, :profile_image, :fill, fallback: "no-image-icon.jpg") %>
                        <p class="user_name">
                          <%= post.user.name %>
                        </p>
                      </div>
                      <span class=<%= "favorite-" + post.id.to_s %>>
                        <%= render 'favorites/favorites', post: post, user: current_user %>
                      </span>
                    </div>
                  </div>
                  <p class="post_title"><%= post.title %></p>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
    <%= link_to 'もっと新着上昇を見る', posts_path %>
  </div>
</div>